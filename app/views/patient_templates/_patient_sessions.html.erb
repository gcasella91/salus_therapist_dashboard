<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Sessions

    <a data-toggle="collapse" href="#patient_sessions_new_form">
      Add session
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @patient.sessions.each do |session| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/sessions/<%= session.id %>">
          <%= session.therapist_id %>
        </a>

        <%if current_user == session.therapist %>
          <a href="/delete_session_from_patient/<%= session.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="patient_sessions_new_form">
        <%= render partial: "patient_templates/patient_sessions_new_form" %>
      </div>
    </div>

  </ul>
</div>
